<clickhouse>
    <storage_configuration>
        <disks>
            <default>
                <keep_free_space_bytes>1099511627776</keep_free_space_bytes>
            </default>

            <cold_hdd>
                <path>/opt/clickhouse_cold/</path>
                <keep_free_space_bytes>1099511627776</keep_free_space_bytes>
            </cold_hdd>
        </disks>

        <!-- Storage policies for movement of data between disks -->
        <policies>
            <move_from_hot_to_cold>
                <volumes>
                    <hot>
                        <disk>default</disk>
                    </hot>
                    <cold>
                        <disk>cold_hdd</disk>
                    </cold>
                </volumes>
                <move_factor>0.1</move_factor>
            </move_from_hot_to_cold>
        </policies>
    </storage_configuration>
</clickhouse>